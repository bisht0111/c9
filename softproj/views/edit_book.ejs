<% include partials/header_admin %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= book.title %> </div>
  <form class="ui form" action="/books/<%= book._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Book ID</label>
        <input type="text" value="<%= book.bookid %>" name="book[bookid]">
      </div>
      <div class="field">
        <label>Title</label>
        <input type="text" value="<%= book.title %>" name="book[title]">
      </div>
      <div class="field">
        <label>Author</label>
        <input type="text" value="<%= book.author %>" name="book[author]">
      </div>
      <div class="field">
        <label>Number of copies</label>
        <input type="text" value="<%= book.copies %>" name="book[copies]">
      </div>
      <div class="field">
        <label>Genre</label>
        <input type="text" value="<%= book.genre %>" name="book[genre]">
      </div>
      <div class="field">
        <label>Description</label>
        <textarea name="book[description]"><%= book.description %></textarea>
      </div>
      <input class="ui violet big basic button" type="submit">
  </form>
</div>

<% include partials/footer_admin %>