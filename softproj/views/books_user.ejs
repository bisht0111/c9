<% include partials/header_user %>

<div class="ui main text container">
    <div class="ui huge header">Books</div>
    <div class="ui top  attached segment">
        <div class="ui divided items">
            <% book.forEach(function(book){%>
            <div class="item">
                <div class="content">
                     <div class="description">
                         <span><label>Book ID - </label> <%= book.bookid %></span>
                     </div>
                     <div class="description">
                         <span><label>Title - </label> <%= book.title %></span>
                     </div>
                     <div class="description">
                         <span><label>Author -  </label> <%= book.author %></span>
                     </div>
                     <div class="description">
                         <span><label>Copies -  </label> <%= book.copies %></span>
                     </div>
                     <div class="description">
                         <span><label>Genre -  </label> <%= book.genre %></span>
                     </div>
                     <div class="description">
                         <p><label>Description -  </label><%- book.description.substring(0, 100) %>...</p>
                     </div>
                     <div class="extra">
                     <a class="ui floated basic violet button" href="/user/books/<%= book._id %>">
                         Read More
                         <i class="right chevron icon"></i>
                     </a>
                     </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>

<% include partials/footer_user%>